
.book-detail-img {
	text-align: center;
	background: #f3f3f3;
	padding: 1rem;
	-webkit-border-radius: 20% 50%;
	        border-radius: 20% 50%;
}
.book-detail-img image {
	width: 10rem;
	-webkit-border-radius: 5px;
	        border-radius: 5px;
}
.book-name {
	font-size: 1.2rem;
	margin-left: 2rem;
	margin-right: 2rem;
	padding-top: .5rem;
	border-top: .04rem solid #f3f3f3;
	border-left: .04rem solid #f3f3f3;
	border-right: .04rem solid #f3f3f3;
	-webkit-border-radius: 5px 5px 0 0;
	        border-radius: 5px 5px 0 0;
	margin-top: .5rem;
	padding-left: .5rem;
}
.book-author {
	margin-left: 2rem;
	margin-right: 2rem;
	margin-bottom: .5rem;
	padding-bottom: .5rem;
	border-left: .04rem solid #f3f3f3;
	border-right: .04rem solid #f3f3f3;
	border-bottom: .04rem solid #f3f3f3;
	color: #999999;
	-webkit-border-radius: 0 0 5px 5px;
	        border-radius: 0 0 5px 5px;
	padding-left: .5rem;
}
.book-jj {
	margin-left: 2rem;
	margin-right: 2rem;
	color: #999999;
	-webkit-border-radius: 5px;
	        border-radius: 5px;
	padding: .5rem;
	border: .04rem solid #f3f3f3;
	margin-bottom: 1rem;
}
.book-btn {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.book-btn button:first-child {
	height: 2rem;
	font-size: .5rem;
	background-color: #2db7f5;
	border-color: #2db7f5;
	color: #FFFFFF;
}
.book-btn button:last-child {
	height: 2rem;
	font-size: .5rem;
	background-color: #19be6b;
	border-color: #19be6b;
	color: #FFFFFF;
}
.book-list {
	margin-left: 2rem;
	margin-right: 2rem;
	border: .04rem solid #f3f3f3;
	margin-top: 1rem;
	padding: .5rem;
	-webkit-border-radius: 5px;
	        border-radius: 5px;
}
.book-list-name {
	padding: .5rem 0;
}
.book-lists {
	font-size: 26rpx;
}
.book-list-zj {
	padding-top: .5rem;
	padding-bottom: .5rem;
	border-bottom: .04rem dashed #dadada;
	color: #999999;
}
.book-list-zj:last-child {
	border-bottom: none;
}

